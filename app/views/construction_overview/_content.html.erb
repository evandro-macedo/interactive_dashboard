<%# Accept variables as locals (from broadcast) or instance variables (from controller) %>
<% total_records ||= @total_records %>
<% phase_summary ||= @phase_summary %>
<% active_houses ||= @active_houses %>
<% selected_phase ||= @selected_phase %>
<% failed_inspections_summary ||= @failed_inspections_summary %>
<% failed_inspections_detail ||= @failed_inspections_detail %>
<% selected_phase_inspections ||= @selected_phase_inspections %>
<% pending_reports_summary ||= @pending_reports_summary %>
<% pending_reports_detail ||= @pending_reports_detail %>
<% selected_phase_reports ||= @selected_phase_reports %>
<% open_scheduled_summary ||= @open_scheduled_summary %>
<% open_scheduled_detail ||= @open_scheduled_detail %>
<% selected_phase_scheduled ||= @selected_phase_scheduled %>

<!-- ========================================================================
     GRUPO A: CASAS ATIVAS
     ======================================================================== -->
<div class="row mb-5">
  <div class="col-12">
    <div class="card shadow">
      <div class="card-header py-4 header-primary-light">
        <h6 class="m-0 font-weight-bold">
          <i class="fas fa-home"></i>
          Casas Ativas por Phase
        </h6>
      </div>
      <div class="card-body p-2">
        <div class="row g-4">
          <!-- Coluna Esquerda: Tabela de Casas (8 colunas) -->
          <div class="col-lg-8">
            <%= turbo_frame_tag "houses_table" do %>
              <%= render "construction_overview/phase_table",
                          houses: active_houses,
                          selected_phase: selected_phase %>
            <% end %>
          </div>

          <!-- Coluna Direita: Gráfico de Pizza (4 colunas) -->
          <div class="col-lg-4">
            <%= render "construction_overview/phase_chart", phase_summary: phase_summary %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- ========================================================================
     GRUPO B: INSPEÇÕES REPROVADAS
     ======================================================================== -->
<%= render "construction_overview/failed_inspections",
            failed_inspections_summary: failed_inspections_summary,
            failed_inspections_detail: failed_inspections_detail,
            selected_phase_inspections: selected_phase_inspections %>

<!-- ========================================================================
     GRUPO C: REPORTS SEM CHECKLIST DONE
     ======================================================================== -->
<%= render "construction_overview/pending_reports",
            pending_reports_summary: pending_reports_summary,
            pending_reports_detail: pending_reports_detail,
            selected_phase_reports: selected_phase_reports %>

<!-- ========================================================================
     GRUPO D: SCHEDULED ABERTOS
     ======================================================================== -->
<%= render "construction_overview/open_scheduled",
            open_scheduled_summary: open_scheduled_summary,
            open_scheduled_detail: open_scheduled_detail,
            selected_phase_scheduled: selected_phase_scheduled %>
