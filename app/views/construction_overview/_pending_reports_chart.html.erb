<!-- Gráfico de Barras: Distribuição por Phase -->
<div class="card shadow h-100">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-warning" style="font-size: 0.95rem;">
      Distribuição por Phase
    </h6>
  </div>
  <div class="card-body p-3">
    <p class="text-muted mb-3" style="font-size: 0.875rem;">
      <i class="fas fa-mouse-pointer"></i> Clique em uma barra para filtrar
    </p>
    <div data-controller="pending-reports"
         data-pending-reports-summary-data-value="<%= summary.to_json %>"
         style="position: relative; height: 280px;">
      <canvas data-pending-reports-target="canvas"></canvas>
    </div>
  </div>
</div>
