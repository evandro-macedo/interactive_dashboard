<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800"><%= @slack_webhook.name %></h1>
  <div>
    <%= link_to edit_slack_webhook_path(@slack_webhook), class: "btn btn-sm btn-warning shadow-sm" do %>
      <i class="fas fa-edit fa-sm text-white-50"></i> Edit
    <% end %>
    <%= link_to slack_webhooks_path, class: "btn btn-sm btn-secondary shadow-sm ml-2" do %>
      <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back
    <% end %>
  </div>
</div>

<!-- Configuration Details -->
<div class="row">
  <div class="col-lg-6">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-cog"></i> Configuration
        </h6>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-4">Status:</dt>
          <dd class="col-sm-8">
            <span class="badge badge-<%= @slack_webhook.active? ? 'success' : 'secondary' %>">
              <%= @slack_webhook.active? ? 'Active' : 'Inactive' %>
            </span>
          </dd>

          <dt class="col-sm-4">Process:</dt>
          <dd class="col-sm-8">
            <code><%= @slack_webhook.process %></code>
          </dd>

          <dt class="col-sm-4">Status:</dt>
          <dd class="col-sm-8">
            <code><%= @slack_webhook.status %></code>
          </dd>

          <dt class="col-sm-4">Test Mode:</dt>
          <dd class="col-sm-8">
            <span class="badge badge-<%= @slack_webhook.test_mode? ? 'warning' : 'info' %>">
              <%= @slack_webhook.test_mode? ? 'Enabled' : 'Disabled' %>
            </span>
          </dd>

          <dt class="col-sm-4">Created:</dt>
          <dd class="col-sm-8">
            <%= @slack_webhook.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
          </dd>

          <dt class="col-sm-4">Updated:</dt>
          <dd class="col-sm-8">
            <%= @slack_webhook.updated_at.strftime("%Y-%m-%d %H:%M:%S") %>
          </dd>
        </dl>

        <% if @slack_webhook.message_template.present? %>
          <hr>
          <h6 class="font-weight-bold">Custom Message Template:</h6>
          <pre class="bg-light p-2 rounded"><%= @slack_webhook.message_template %></pre>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-info">
          <i class="fas fa-chart-bar"></i> Statistics
        </h6>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-6">Total Triggers:</dt>
          <dd class="col-sm-6">
            <span class="h4 text-primary"><%= @slack_webhook.trigger_count %></span>
          </dd>

          <dt class="col-sm-6">Successful:</dt>
          <dd class="col-sm-6">
            <span class="h4 text-success"><%= @slack_webhook.successful_triggers %></span>
          </dd>

          <dt class="col-sm-6">Failed:</dt>
          <dd class="col-sm-6">
            <span class="h4 text-danger"><%= @slack_webhook.failed_triggers %></span>
          </dd>

          <dt class="col-sm-6">Success Rate:</dt>
          <dd class="col-sm-6">
            <span class="h4 text-<%= @slack_webhook.success_rate >= 80 ? 'success' : @slack_webhook.success_rate >= 50 ? 'warning' : 'danger' %>">
              <%= @slack_webhook.success_rate %>%
            </span>
          </dd>

          <dt class="col-sm-6">Last Triggered:</dt>
          <dd class="col-sm-6">
            <% if @slack_webhook.last_triggered_at.present? %>
              <%= time_ago_in_words(@slack_webhook.last_triggered_at) %> ago
            <% else %>
              Never
            <% end %>
          </dd>
        </dl>

        <hr>

        <div class="text-center">
          <%= button_to test_webhook_slack_webhook_path(@slack_webhook),
                        method: :post,
                        class: "btn btn-primary" do %>
            <i class="fas fa-vial"></i> Test Webhook
          <% end %>
          <div id="webhook_test_result_<%= @slack_webhook.id %>" class="mt-3"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Recent Trigger Logs -->
<div class="row">
  <div class="col-lg-12">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-history"></i> Recent Trigger History
        </h6>
      </div>
      <div class="card-body">
        <% if @recent_logs.any? %>
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Triggered At</th>
                  <th>Records</th>
                  <th>Status</th>
                  <th>Response Code</th>
                  <th>Message</th>
                </tr>
              </thead>
              <tbody>
                <% @recent_logs.each do |log| %>
                  <tr>
                    <td>
                      <%= log.triggered_at.strftime("%Y-%m-%d %H:%M:%S") %>
                      <small class="text-muted d-block">
                        <%= time_ago_in_words(log.triggered_at) %> ago
                      </small>
                    </td>
                    <td class="text-center">
                      <span class="badge badge-primary badge-pill">
                        <%= log.records_count %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="badge badge-<%= log.status_badge %>">
                        <%= log.status_text %>
                      </span>
                    </td>
                    <td class="text-center">
                      <% if log.response_code.present? %>
                        <span class="badge badge-<%= log.response_code.between?(200, 299) ? 'success' : 'danger' %>">
                          <%= log.response_code %>
                        </span>
                      <% else %>
                        <span class="text-muted">N/A</span>
                      <% end %>
                    </td>
                    <td>
                      <small><%= log.message_preview %></small>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-4">
            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
            <p class="text-muted">No trigger history yet.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>