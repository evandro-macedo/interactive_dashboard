<%= form_with model: slack_webhook, local: true, html: { class: "needs-validation", novalidate: true } do |form| %>
  <% if slack_webhook.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h6 class="alert-heading">
        <i class="fas fa-exclamation-triangle"></i>
        <%= pluralize(slack_webhook.errors.count, "error") %> prohibited this webhook from being saved:
      </h6>
      <ul class="mb-0">
        <% slack_webhook.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :name, class: "control-label" %>
        <%= form.text_field :name,
                            class: "form-control",
                            placeholder: "e.g., Electric Trim Progress Alerts",
                            required: true %>
        <small class="form-text text-muted">
          A descriptive name for this webhook configuration
        </small>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :webhook_url, "Slack Webhook URL", class: "control-label" %>
        <%= form.text_field :webhook_url,
                            class: "form-control",
                            placeholder: "https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX",
                            required: true %>
        <small class="form-text text-muted">
          Get this from your Slack app's Incoming Webhooks section
        </small>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :process, "Process", class: "control-label" %>
        <%= form.select :process,
                        options_for_select(@available_processes, slack_webhook.process),
                        { prompt: "Select a process..." },
                        { class: "form-control", required: true } %>
        <small class="form-text text-muted">
          The process that will trigger this webhook
        </small>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :status, "Status", class: "control-label" %>
        <%= form.select :status,
                        options_for_select(@available_statuses, slack_webhook.status),
                        { prompt: "Select a status..." },
                        { class: "form-control", required: true } %>
        <small class="form-text text-muted">
          The status that will trigger this webhook
        </small>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= form.label :message_template, "Message Template (Optional)", class: "control-label" %>
        <%= form.text_area :message_template,
                           class: "form-control",
                           rows: 4,
                           placeholder: "Custom message template (leave blank to use default)" %>
        <small class="form-text text-muted">
          Optional: Customize the message sent to Slack. You can use variables like {{count}}, {{process}}, {{status}}
        </small>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-check">
        <%= form.check_box :active, class: "form-check-input" %>
        <%= form.label :active, class: "form-check-label" do %>
          <strong>Active</strong>
          <small class="text-muted d-block">Enable this webhook immediately</small>
        <% end %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-check">
        <%= form.check_box :test_mode, class: "form-check-input" %>
        <%= form.label :test_mode, class: "form-check-label" do %>
          <strong>Test Mode</strong>
          <small class="text-muted d-block">Log messages without sending to Slack</small>
        <% end %>
      </div>
    </div>
  </div>

  <hr class="my-4">

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", slack_webhooks_path, class: "btn btn-secondary ml-2" %>
  </div>
<% end %>

<script>
  // Bootstrap form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>